<% layout('layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2"> 
    <h1>edit your listing</h1>
    <form method="post" action="/listings/<%=listing.id%>?_method=put" novalidate class="needs-validation">
    <div class="mb-3">
    <label for="title"  class="from-label">title</label>
    <input name="listing[title]" class="form-control" value="<%=listing.title%>" type="text" required >
     <div class="invalid-feedback">please enter a valid title</div> </div> 
    <div class="mb-3">
    <label class="from-label" for="description">description</label>
    <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
     <div class="invalid-feedback">please enter a description</div> </div>
    <div class="mb-3">
    <label class="from-label" for="image">image link</label>
    <input name="listing[image]" value="<%=listing.image%>" class="form-control" required type="text">
     <div class="invalid-feedback">please enter a valid image url</div> </div>
 <div class="row">
            <div class="mb-3 col-md-4">
        <label class="form-label" for="price">price  </label>
        <input name="listing[price]" class="form-control" value="<%=listing.price%>"required type="number">
        <div class="invalid-feedback">please enter a valid price</div> </div>
        <div class="mb-3 col-md-8">
            <label for="country"class="form-label">country</label>
        <input name="listing[country]" class="form-control" required value="<%=listing.country%>" type="text">
        <div class="invalid-feedback">please enter a valid country</div>  </div>
        </div>
         <div class="mb-3" >
            <label for="location"class="form-label">location</label>
        <input name="listing[location]" class="form-control" required value="<%=listing.location%>" type="text">
          <div class="invalid-feedback">please enter a valid location</div></div>
       

<button class="btn btn-dark edit-btn  mt-3">edit</button><br/><br/>
</form>
</body>
</div></div>
