<% layout('layouts/boilerplate') -%>
<body>
<div class="row mt-3">
  <div class="col-8 offset-3">
  
    <h3><%= listing.title %></h3>
  </div>
    <div class="show-card  col-6 offset-3">
      <img
       src="<%=listing.image%>" 
        class="card-img-top show-image" 
        alt="listing_image">
      <div class="card-body">
        <p class="card-text">
          
             <%= listing.description %><br/>
             &#8377;<%= listing.price.toLocaleString("en-IN")  %><br/>
             <%= listing.country %></li>
             <%= listing.location %></li>
        </p>
      </div>
    </div>


     <div class="btns mt-3">
           <a href="/listings/<%=listing._id%>/edit"
             class="btn btn-dark col-1 offset-3 edit-btn">edit</a>
           <form method="post" action="/listings/<%=listing._id%>?_method=delete" >
           <button class="btn btn-dark   offset-5">delete</button>
            </form>
</div>
<div class="col-8 offset-3 mb-3">
  <hr>
  <h4>leave a review</h4>
  <form  action="/listings/<%=listing.id%>/reviews" class="needs-validation" novalidate method="post" >
    <div class="mb-3 mt-3">
      <label class="form-label" for="rating">rating</label>
      <input class="from-control " type="range" min="1" max="5" id="rating" name="review[rating]">
    </div>
    <div class="mb-3 mt-3">
      <label class="form-label " for="comment" >comments</label>
      <textarea required  class="from-control" name="review[comment]" id="comment" cols="30" rows="5"></textarea>
      <div class="invalid-feedback" >please enter comments</div>
    </div>
    <button class="btn btn-outline-dark">submit</button>
  </form>
</div>
</div><br/>

</body>